<div>
  <%= image_tag("background-overlayed.jpg" , :class=>"background-image ")%> 
</div>
<span class="form-container">
<h1 style="color:black">Undergraduates</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Isable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @undergraduates.each do |undergraduate| %>
      <tr>
        <td><%= undergraduate.name %></td>
        <td><%= undergraduate.isAble %></td>
        <td><%= link_to('Show', undergraduate,:class=>"btn btn-primary") %></td>
        <td><%= link_to('Edit', edit_undergraduate_path(undergraduate),:class=>"btn btn-primary") %></td>
        <td><%= link_to('Destroy', undergraduate, method: :delete, data: { confirm: 'Are you sure?'},:class=>"btn btn-primary") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Undergraduate', new_undergraduate_path,:class=>"btn btn-primary")%>
</span>