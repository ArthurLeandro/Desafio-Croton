<%= form_with(model: undergraduate, local: true, class:"form-container") do |form| %>
  <h1>Cadastre-se</h1>
      <% if undergraduate.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(undergraduate.errors.count, "error") %> Este usuário não pode ser cadastrado:</h2>
          <ul>
            <% undergraduate.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>  
    <div>
      <%= form.text_field(:name, :class=>"form-control form-control-lg", :placeholder=>"Seu Nome")%>
    </div>
    <div>
      <%= form.submit(:value=>"Cadastrar" ,:class=>"btn btn-primary", :style => "margin: 1em;")%>
    </div>
<% end %>

